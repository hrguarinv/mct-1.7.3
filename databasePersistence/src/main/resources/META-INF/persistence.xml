<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="MissionControlTechnologies" transaction-type="RESOURCE_LOCAL">
		<class>gov.nasa.arc.mct.dbpersistence.dao.DatabaseIdentification</class>
		<class>gov.nasa.arc.mct.dbpersistence.dao.ViewState</class>
		<class>gov.nasa.arc.mct.dbpersistence.dao.TagAssociation</class>
		<class>gov.nasa.arc.mct.dbpersistence.dao.Tag</class>
		<class>gov.nasa.arc.mct.dbpersistence.dao.MctUsers</class>
		<class>gov.nasa.arc.mct.dbpersistence.dao.Disciplines</class>
		<class>gov.nasa.arc.mct.dbpersistence.dao.ComponentSpec</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes> 
		<properties>
			<property name="hibernate.max_fetch_depth" value="3" />
		</properties>
	</persistence-unit>
</persistence>
